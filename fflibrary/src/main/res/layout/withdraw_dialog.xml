<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_gradiant"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Winning Balance"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtWinBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹500.00"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/txtInstant"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/btn_green_outline"
            android:text="Instant Bank Withdraw"
            android:textColor="@color/green_pure"/>

        <Button
            android:id="@+id/txtNormal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/btn_green_outline"
            android:text="Normal Withdraw"
            android:textColor="@color/green_pure"/>

<!--        <Button
            android:id="@+id/txtPaytm1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/btn_green_outline"
            android:text="Paytm Withdraw"
            android:visibility="gone"
            android:textColor="@color/green"/>-->

    </LinearLayout>

    <Button
        android:id="@+id/txtPaytm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_25sdp"
        android:background="@drawable/btn_green_outline"
        android:text="Instant Paytm Withdraw"
        android:textColor="@color/green_pure"/>


</LinearLayout>