<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_9sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp"
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_match_green"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/contest_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/contest_tree_layout"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Prize Pool"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/contest_price_pool"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="₹10 Lakhs"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="9dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_trophy" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="Winner"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/_8sdp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/contest_winner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:drawableRight="@drawable/ic_down_arrow_green"
                                android:drawablePadding="@dimen/_3sdp"
                                android:gravity="center"
                                android:text="200"
                                android:textColor="@color/green_pure"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/contest_progress"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:progress="50"
                        android:progressDrawable="@drawable/custom_progress_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/teams_left_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/contest_left_team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="80"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/contest_left_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="Spots left"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_7sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contest_full_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/contest_full"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Contest Full"
                                android:textColor="@color/darkRed"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/contest_total_team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="500"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/contest_total_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="Spots"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_7sdp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@color/appBackGround" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Entry Fee"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/txtLblEntry"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_green"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:text="₹5000"
                        android:gravity="center"
                        android:ellipsize="marquee"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />

                   <!-- <TextView
                        android:id="@+id/contest_offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Use 5% Bonus"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_6sdp" />
                    <TextView
                        android:id="@+id/txtFantaGems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Use 5% FantaGems"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_6sdp" />-->
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:background="@color/appBackGround" />

            <HorizontalScrollView
                android:layout_gravity="center"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:id="@+id/layPlayers"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtWonLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Won"
                android:visibility="gone"
                android:textSize="12sp"
                android:paddingVertical="@dimen/_1sdp"
                android:textColor="@color/white"
                android:background="@color/green_pure"
                android:gravity="center"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>