<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.BankAccountDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bankMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_8sdp"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/bankSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_8ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/bank_photo"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/bank_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_primary">

                    <TextView
                        android:id="@+id/bank_upload_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="Upload Bank Document "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/bank_eye"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/white" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="Enter account holder name*"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:id="@+id/bank_holder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:hint="As on Bank Passbook"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:importantForAutofill="no"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                    android:maxLength="54"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Please ensure that your bank account name is same as the name on your PAN. card Once you update the bank account Name, it cannot be edited."
                    android:textColor="@color/textPrimary"
                    android:textStyle="italic"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_3sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="Enter account number*"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/bank_acc_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:maxLength="18"
                    android:importantForAutofill="no"
                    android:background="@drawable/curv_border"
                    android:hint="As on Bank Passbook"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*If bank account number starts with a zero '0' please enter the complete bank account number starting with numeral zero '0'."
                    android:textColor="@color/textPrimary"
                    android:textStyle="italic"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_3sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="Re-enter account number*"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/bank_confirm_acc_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:digits="0123456789"
                    android:maxLength="18"
                    android:importantForAutofill="no"
                    android:hint="As on Bank Passbook"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="Enter IFSC code*"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:id="@+id/bank_ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:inputType="textVisiblePassword"
                    android:maxLength="11"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    android:importantForAutofill="no"
                    android:hint="As on Bank Passbook"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*The first four characters of IFSC code are alphabets which represent the bank. The fifth character is zero."
                    android:textColor="@color/textPrimary"
                    android:textStyle="italic"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_3sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="Enter bank name*"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:id="@+id/bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:hint="As on Bank Passbook"
                    android:importantForAutofill="no"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:maxLength="54"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Please ensure that your bank name is the same as name on your bank passbook."
                    android:textColor="@color/textPrimary"
                    android:textStyle="italic"
                    android:textSize="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_3sdp"/>

                <Button
                    android:id="@+id/bank_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/btn_primary"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>