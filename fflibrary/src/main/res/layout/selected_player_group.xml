<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teamReviewLayout"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_height="@dimen/_80sdp"
   >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!-- android:background="@drawable/selected_gray_group_gray"-->
        <ImageView
            android:id="@+id/player_img"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/ic_team1_tshirt" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/_3sdp"
            android:text="Vidyut\nRajagopal"
            android:textColor="@color/textPrimary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/player_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="BAT"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_dark_bg"
        android:gravity="center"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_3sdp"
        android:paddingVertical="2dp">

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_lock_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:gravity="center"
            android:text="Selected"
            android:textColor="@color/white"
            android:textSize="9sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgEdit"
        android:visibility="gone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/edit"/>

    <ImageView
        android:id="@+id/inPlaying"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/nonplay"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

</RelativeLayout>