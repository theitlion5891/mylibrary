<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".Fragment.PhoneNumberFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20sdp">

        <TextView
            android:id="@+id/welcome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="@dimen/_30sdp"
            android:text="@string/welcome_back"
            android:textColor="@color/font_color"
            android:textSize="@dimen/_25ssp" />

        <TextView
            android:id="@+id/welcome_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_back"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="@dimen/_8sdp"
            android:text="@string/use_your_credentials_below_and_login_to_your_account"
            android:textColor="@color/font_color"
            android:textSize="@dimen/_10ssp" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_detail_text"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/shape_edit_text_login"
            android:hint="Phone Number"
            android:inputType="number"
            android:letterSpacing="0.1"
            android:lines="1"
            android:maxLength="10"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_14sdp">

        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/shape_edit_text_login"
            android:hint="Password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="10"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_14sdp">

        </EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shape_primary"
                android:elevation="0dp"
                android:text="@string/log_into_your_account"
                android:textAllCaps="false"
                android:textColor="@color/white_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forgot_passwrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Forgot Password?"
                    android:textColor="@color/font_color" />

                <TextView
                    android:id="@+id/new_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="New User?"
                    android:textColor="@color/font_color" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>