<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/match_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_match_green"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1.5dp">

                <TextView
                    android:id="@+id/txtTeamname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:text="Juniourstream"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/_8ssp" />

                <LinearLayout
                    android:id="@+id/flag_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgCopy"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_copy" />

                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_pen" />

                     <ImageView
                        android:layout_weight="1"
                        android:id="@+id/imgShare"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:src="@drawable/ic_share_gree" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flag_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="end"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkRedTrans" />

            <LinearLayout
                android:id="@+id/card_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/custom_c"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_1sdp"
                            android:text="C "
                            android:textColor="@color/pureWhite"
                            android:textSize="@dimen/_8ssp" />

                        <ImageView
                            android:id="@+id/img_team1"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/user_image" />

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/c_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:text="Ms"
                                android:visibility="gone"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_7ssp" />

                            <TextView
                                android:id="@+id/c_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:text="Dhoni"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="bold" />
                        </LinearLayout>-->
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_team1_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Csk :  "
                            android:textAllCaps="true"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_9ssp" />

                        <TextView
                            android:id="@+id/txt_team1_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="6"
                            android:textAllCaps="true"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_team2_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Mi :  "
                            android:textAllCaps="true"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_9ssp" />

                        <TextView
                            android:id="@+id/txt_team2_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="6"
                            android:textAllCaps="true"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vc_first_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="Ms"
                                android:ellipsize="end"
                                android:visibility="gone"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_7ssp" />

                            <TextView
                                android:id="@+id/vc_last_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="Sharma"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="bold" />
                        </LinearLayout>-->

                        <ImageView
                            android:id="@+id/img_team2"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/user_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/custom_vc"
                            android:gravity="right"
                            android:minWidth="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_1sdp"
                            android:text="VC"
                            android:textColor="@color/pureWhite"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CE1D1D1D"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/c_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="Dhoni"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vc_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="Sharma"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green_pure" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/lightGreen"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_7sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Wicket Keeper"
                            android:id="@+id/txtWK"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/txtWicket_k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/font_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/green_pure" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Bastman"
                            android:id="@+id/txtBat"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/txtBastman"
                            android:layout_width="86dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/font_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/green_pure" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="All Rounder"
                            android:id="@+id/txtAr"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/txtAllrounder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/font_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:id="@+id/viewBowl"
                        android:layout_height="match_parent"
                        android:background="@color/green_pure" />

                    <LinearLayout
                        android:id="@+id/layBowl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Bowler"
                            android:id="@+id/txtBowl"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/txtBowler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/font_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:id="@+id/viewCr"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:background="@color/green_pure" />

                    <LinearLayout
                        android:id="@+id/layCr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Bowler"
                            android:id="@+id/txtCr"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/txtCenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/font_color"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtLineups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_9sdp"
                    android:text="2 Player are not lineup"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginHorizontal="0.8dp"
                    android:layout_marginBottom="0.8dp"
                    android:textColor="@color/black"
                    android:background="@drawable/curve_bottom_selected"/>


   <!--             <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/green" />-->
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>