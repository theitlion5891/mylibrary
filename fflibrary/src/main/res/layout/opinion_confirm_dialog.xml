<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/_10sdp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_round_corner"
            android:clipToPadding="false"
            android:imeOptions="actionDone"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_timer"/>
                        <TextView
                            android:id="@+id/txtEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ends on May 20th"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dark_blue"
                            android:layout_marginStart="@dimen/_5sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_trade"/>
                        <TextView
                            android:id="@+id/txtTrades"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1466 Trades"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginStart="@dimen/_5sdp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNewBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW"
                        android:visibility="gone"
                        android:background="@drawable/red_bg_radius"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgConImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_team1_placeholder"/>
                    <TextView
                        android:id="@+id/txtConTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:text="Chennai to qualify for playoffs Indian T20 League 2023"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:background="@drawable/light_blue_bg_curve"
                    android:paddingVertical="3dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_trophy"/>
                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ends on May 20th"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/dark_blue"
                        android:layout_marginStart="@dimen/_5sdp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/appBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/opinio_yes"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layInteger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/white_fill_curve"
                        android:hint="Your Forecast"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/edtInteger"
                        android:inputType="number"
                        android:gravity="center"
                        android:digits="0123456789."/>

                    <TextView
                        android:id="@+id/txtIntegerEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/white_fill_curve"
                        android:hint="Your Forecast"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/edtTime"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:inputType="none"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txtTimeEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entry Fee: 10"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/join_contest_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_15sdp"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/_8sdp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLblCommision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:visibility="gone"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>