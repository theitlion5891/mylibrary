<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_offer_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/new_offer_per"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_8sdp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTitle"
                    android:text="Test Title"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtOffer"
                    android:text="Get 10% in Bonus"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtOfferCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BONUSP10"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:background="@drawable/gray_border_field"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View More"
                        android:gravity="end"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/gray_444444"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="#4F01579B"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtApply"
            android:text="Tap to apply"
            android:gravity="center"
            android:layout_marginHorizontal="0.8dp"
            android:layout_marginBottom="0.8dp"
            android:background="@drawable/light_yellow_bottom_radius"
            android:textAllCaps="true"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/roboto_semi_bold"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>