<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_9sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp"
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_green_black_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Joined"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp" />


                    <TextView
                        android:id="@+id/contest_joined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="200"
                        android:textColor="@color/green_pure"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/contest_tree_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prize Pool"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/contest_price_pool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10 Lakhs"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:layout_weight="1"
                    android:paddingEnd="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Entry Fee"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/txtLblEntry"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/btn_green"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_2sdp"
                        android:text="₹5000"
                        android:gravity="center"
                        android:ellipsize="marquee"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                   <!-- <TextView
                        android:id="@+id/contest_offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="Use 5% Bonus"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_6sdp" />

                    <TextView
                        android:id="@+id/txtFFGems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="Use 5% FantaGems"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_6sdp" />-->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textPrimary"
                android:layout_marginHorizontal="0.8dp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="Players"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="Joining"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtLblWin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:text="Winning/Entry"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="0.8dp"
                android:layout_marginHorizontal="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:id="@+id/layPlayers"/>

            <TextView
                android:id="@+id/txtWonLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Won"
                android:visibility="gone"
                android:textSize="12sp"
                android:paddingVertical="@dimen/_1sdp"
                android:textColor="@color/white"
                android:background="@color/green_pure"
                android:gravity="center"/>

            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:background="@color/appBackGround" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5ssp"
                    android:id="@+id/layPlayers"/>

            </HorizontalScrollView>-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>