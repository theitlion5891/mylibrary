<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/select_card"
    android:background="@drawable/curve_bottom_white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/select_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/user_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="S Shah"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPlayerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="WK"
                    android:visibility="visible"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_8ssp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/team_xi_sign"
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_xi_out" />

                    <TextView
                        android:id="@+id/team_xi_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="In XI"
                        android:textColor="@color/green_pure"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <TextView
                android:id="@+id/txtJoining"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/green_pure"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtWinEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/font_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />
            <!--<com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shimWin"
                android:gravity="center"
                app:shimmer_duration="2000"
                app:shimmer_base_alpha="1"
                app:shimmer_auto_start="true"
                app:shimmer_shape="linear"
                app:shimmer_highlight_alpha=".1">
                <TextView
                    android:id="@+id/txtWinEntry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />
            </com.facebook.shimmer.ShimmerFrameLayout>-->

        </LinearLayout>

        <ImageView
            android:id="@+id/plus_minus_sign"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_plus" />
    </LinearLayout>

    <TextView
        android:id="@+id/player_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_linear_layout"
        android:background="@drawable/team1_name_select_player"
        android:paddingHorizontal="@dimen/_3sdp"
        android:paddingVertical="@dimen/_1sdp"
        android:text="MI"
        android:textAllCaps="true"
        android:visibility="gone"
        android:textColor="@color/pureWhite"
        android:textSize="@dimen/_6ssp"
        android:textStyle="bold" />


