<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackground"
    tools:context=".Activity.HelpDeskActivity">

    <include layout="@layout/toolbar_back"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layMyTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Tickets"
                        android:fontFamily="@font/roboto_extra_bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/txtAllTickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All 》"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/gray_444444"/>
                    <!--》》-->
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerMyTickets"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Recent Tickets Available"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:visibility="gone"
                    android:id="@+id/txtNoData"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quick Asked Questions"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerQue"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <LinearLayout
                    android:id="@+id/layAllToic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/bullet"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Browse all topics"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layViewPast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:gravity="center"
                android:background="@color/white"
                android:padding="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Past Tickets"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Didn't find what you were looking for?"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/gray_444444"/>

                <LinearLayout
                    android:id="@+id/btnWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/white_fill_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/writeus"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write to us"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>