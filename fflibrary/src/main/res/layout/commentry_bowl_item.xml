<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/dimen_1dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="5dp"
                android:layout_height="@dimen/_7sdp"
                android:background="#D3D3D3" />

            <LinearLayout
                android:background="@drawable/gray_circul_fill"
                android:gravity="center"
                android:id="@+id/layBowlRun"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">
                <TextView
                    android:id="@+id/txtBowlRun"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"

                    android:gravity="center"
                    android:textColor="@color/white"
                    style="@style/Tv_9_bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtOverBowl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Tv_9_bold" />

            <View
                android:layout_width="5dp"
                android:layout_height="@dimen/_7sdp"
                android:background="#D3D3D3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5sdp"
                style="@style/Tv_10_normal" />

        </LinearLayout>

    </LinearLayout>

