<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@+id/txtLblTournament">

        <LinearLayout
            android:id="@+id/layMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_22sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingHorizontal="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_timer_gray"/>
                <TextView
                    android:id="@+id/txtConEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prize Pool"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:paddingTop="@dimen/_3sdp"
                        android:id="@+id/contest_price_pool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:focusable="true"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtGiveOpinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green_curve"
                    android:text="Entry"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_8sdp"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/contest_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:progressDrawable="@drawable/custom_progress_horizontal"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:progress="50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/contest_left_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/contest_left_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:text="Spots left"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/contest_total_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/contest_total_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:text="Total Spots"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_5sdp"
                android:background="@color/appBackground"
                android:paddingVertical="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_1st_winner"/>
                <TextView
                    android:id="@+id/txtFirstPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_win_persantage"/>
                <TextView
                    android:id="@+id/txtWinPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_multiple_join"/>
                <TextView
                    android:id="@+id/txtUpto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up to "
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imgPlayed"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_confirm_contest"/>
                <TextView
                    android:id="@+id/txtPlayedCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Played"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/game_contest_pool"
        android:text="TOURNAMENT 1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/_9sdp"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtLblTournament"/>

</RelativeLayout>