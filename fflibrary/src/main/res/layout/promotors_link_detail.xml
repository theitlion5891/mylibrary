<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Promotor Details"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/btn_gray_outline"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_channel_url"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="e.g. www.insta/xyz.com"
                android:inputType="textUri"
                android:id="@+id/edtInstagram"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/transparent"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your instagram page link here"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/btnGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/btn_gray_outline"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_channel_url"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="e.g. www.fb123/xyz.com"
                 android:inputType="textUri"
                android:id="@+id/edtFacebook"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/transparent"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your facebook page link here"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/btnGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/btn_gray_outline"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_channel_url"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="e.g. www.tele123/xyz.com"
                android:inputType="textUri"
                android:id="@+id/edtTelegram"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/transparent"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your telegram channel link here"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/btnGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Youtube"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/btn_gray_outline"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_channel_url"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="e.g. www.yb123/xyz.com"
                android:inputType="textUri"
                android:id="@+id/edtYoutube"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/transparent"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your youtube channel link here"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/btnGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/btn_gray_outline"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_channel_url"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="e.g. www.pro.../xyz.com"
                android:inputType="textUri"
                android:id="@+id/edtOther"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/transparent"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your website here"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textColor="@color/btnGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/white"
            android:text="Confirm"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/btn_green"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:id="@+id/btnSubmit"/>

    </LinearLayout>

</ScrollView>