<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ludo_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:background="#40020202"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_close_round"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poker Live Tables"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"/>

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_close_otp"
            android:id="@+id/imgClose"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layContest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLblPool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Blinds"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtWinAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹5000"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layOnlineText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtGreenDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_lineup_out"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_7sdp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtOnlineCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_regular"
                    android:text="0 Playing"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEntryLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:text="Min Buy-In"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/btnEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5000"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layContest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/appBackground"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recyclerTable"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>