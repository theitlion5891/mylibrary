<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/layContest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="1dp"
        android:background="@drawable/white_border"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_player_height"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginEnd="-10dp"
            android:background="@drawable/bg_game_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLblPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Avg. Table Stack"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtAvgStack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingVertical="@dimen/_1sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/white_border_trans"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_player_height"
            android:layout_weight="1.5"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginStart="-10dp"
            android:background="@drawable/bg_game_right"
            android:gravity="end|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEntryLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:text="Min Buy-In"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtBuyIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50"
                android:maxWidth="@dimen/_60sdp"
                android:paddingVertical="@dimen/_1sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/btn_dark_red_bg"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_player_height"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLblPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Players"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6/6"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/green_pure"/>


    </LinearLayout>

</RelativeLayout>