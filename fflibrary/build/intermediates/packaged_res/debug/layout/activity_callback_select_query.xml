<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CallbackSelectQueryActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/blackSecondary"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:layout_height="?actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_5sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Help &amp; Support"
                android:layout_marginEnd="@dimen/_30sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_below="@+id/toolbar"
        android:id="@+id/imgBanner"
        android:background="@color/pureWhite"
        android:src="@drawable/callback_banner"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/imgBanner"
        android:id="@+id/lbl"
        android:paddingVertical="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="#1D1D1D"
        android:textSize="@dimen/_14sdp"
        android:text="Choose your query"/>

    <ScrollView
        android:layout_below="@+id/lbl"
        android:layout_above="@+id/layFooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsPrograms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            app:singleSelection="true"
            app:chipSpacing="8dp"/>
        <!--<RelativeLayout
            android:id="@+id/layQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </RelativeLayout>-->
    </ScrollView>

    <LinearLayout
        android:id="@+id/layFooter"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/call_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_green"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:clickable="true"
            android:focusable="true"
            android:text="Raise your Query"
            android:textColor="@color/pureWhite" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you facing issue while using the app, want to suggest something, or want to connect us?"
            android:padding="@dimen/_10sdp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose one of the option and connect us"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/blackPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTeleMsg"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_telegram" />

            <ImageView
                android:id="@+id/btnCall"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/ic_call_back"/>
            <ImageView
                android:id="@+id/btnEmail"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_email"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>