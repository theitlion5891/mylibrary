<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.EventDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blackPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:layout_toEndOf="@+id/back_img"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_timer"/>

                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ends on May 20th"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtMatchedVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginStart="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/txtLblMatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Matched"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9sdp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:visibility="gone"
                android:background="@drawable/red_bg_radius"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgConImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/event_placeholder"/>
            <TextView
                android:id="@+id/txtConTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_regular"
                android:text="Chennai to qualify for playoffs Indian T20 League 2023"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:id="@+id/viewSaperator"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/appBackground"/>

        <LinearLayout
            android:id="@+id/layDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:visibility="gone"
                android:src="@drawable/ic_trophy"/>
            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ends on May 20th"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investment "
                android:paddingStart="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/txtInvst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_semi_bold"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/txtLblReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Current Returns "
                android:textColor="@color/dark_blue"
                android:padding="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/txtReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_semi_bold"
                android:textSize="@dimen/_9sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtEventDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Go to Event"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/red"
                android:padding="@dimen/_3sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textSize="@dimen/_10sdp"/>

            <LinearLayout
                android:id="@+id/layWinning"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="30dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/green_shadow_win_amt_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtWinAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Won 10 "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:src="@drawable/rupee_green_round"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/tabUnMatched">
            <TextView
                android:id="@+id/txtUnMatched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Unmatched"
                android:textColor="@color/blackPrimary"
                android:paddingVertical="@dimen/_8sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textSize="@dimen/_12sdp"
                />
            <View
                android:id="@+id/viewUnMatched"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/blackPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/tabMatched">
            <TextView
                android:id="@+id/txtMatched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Matched"
                android:textColor="@color/gray_686868"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"
                android:paddingVertical="@dimen/_8sdp"/>
            <View
                android:id="@+id/viewMatched"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="gone"
                android:background="@color/blackPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/tabCancelled">
            <TextView
                android:id="@+id/txtCancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancelled"
                android:textColor="@color/gray_686868"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"
                android:paddingVertical="@dimen/_8sdp"/>
            <View
                android:id="@+id/viewCancelled"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="gone"
                android:background="@color/blackPrimary"/>
        </LinearLayout>


    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerEvent"/>

            <LinearLayout
                android:id="@+id/nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nodata" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="No data available"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Stay tuned!"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>