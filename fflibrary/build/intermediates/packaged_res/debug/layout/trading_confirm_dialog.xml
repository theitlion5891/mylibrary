<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="0dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_round_corner"
            android:clipToPadding="false"
            android:imeOptions="actionDone"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_timer"/>
                        <TextView
                            android:id="@+id/txtEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ends on May 20th"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/blackPrimary"
                            android:layout_marginStart="@dimen/_5sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_trade"/>
                        <TextView
                            android:id="@+id/txtTrades"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1466 Trades"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/blackPrimary"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginStart="@dimen/_5sdp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNewBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW"
                        android:visibility="gone"
                        android:background="@drawable/red_bg_radius"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgConImage"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/event_placeholder"/>
                    <TextView
                        android:id="@+id/txtConTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Chennai to qualify for playoffs Indian T20 League 2023"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="3dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_timer"/>
                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ends on May 20th"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/blackPrimary"
                        android:layout_marginStart="@dimen/_5sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your Option"
                        android:textColor="@color/blackPrimary"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtOptionYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Yes"
                        android:background="@drawable/opinio_yes"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/green_pure"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtOptionNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="No"
                        android:background="@drawable/opinio_no"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/appBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Price"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:progressDrawable="@drawable/option_progress_bg"
                android:thumb="@drawable/opinion_slider_thum"
                android:max="9"
                android:min="1"
               />

            <TextView
                android:id="@+id/txtQtyAtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 quantities available at 1"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="end"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blackPrimary"
                android:layout_marginStart="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:gravity="center"
                android:background="@drawable/yellow_border_bg_optinion"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_trade"/>
                <TextView
                    android:id="@+id/txtMaxQtyAtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 quantities available at 0"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/blackPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/txtSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/appBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Quantity (Max 1000)"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtQty"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:hint="Qty"
                    android:maxLength="4"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/gray_round_border"
                    android:text=""/>

                <!--<TextView
                    android:id="@+id/txtQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />-->
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:progressDrawable="@drawable/option_progress_bg"
                android:thumb="@drawable/opinion_slider_thum"
                android:max="1000"
                android:min="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtBtn10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_match_green"
                    android:text="10"
                    android:paddingVertical="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_semi_bold"
                    />
                <TextView
                    android:id="@+id/txtBtn50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_match_green"
                    android:text="50"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:gravity="center"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_semi_bold"
                    />
                <TextView
                    android:id="@+id/txtBtn100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_match_green"
                    android:text="100"
                    android:paddingVertical="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_semi_bold"
                    />
                <TextView
                    android:id="@+id/txtBtn500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_match_green"
                    android:text="500"
                    android:paddingVertical="@dimen/_3sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:gravity="center"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_semi_bold"
                    />
                <TextView
                    android:id="@+id/txtBtn750"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_match_green"
                    android:text="750"
                    android:paddingVertical="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_semi_bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:gravity="center"
                android:background="@drawable/yellow_border_bg_optinion"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You Invest"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/blackPrimary"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txtInvest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/blackPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_5sdp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/flagBorder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You Get"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/blackPrimary"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txtGet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/blackPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_5sdp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/join_contest_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_15sdp"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/_8sdp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLblCommision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:visibility="gone"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blackPrimary"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>