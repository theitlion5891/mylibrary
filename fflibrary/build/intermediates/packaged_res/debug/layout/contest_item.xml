<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_10sdp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0.2dp"
        android:background="@drawable/white_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layUser1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_player_height"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_game_left"
            android:layout_marginEnd="-10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtLblPool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Winning"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txtPool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/white_border_trans"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/_2sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layP1Waiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_black_transe"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="#12345678901"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layWaitLabelP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/checkbox_ludo" />

                        <TextView
                            android:id="@+id/txtLabelWaitP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" is waiting"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/imgPool"
                            app:layout_constraintStart_toStartOf="@+id/imgPool"
                            app:layout_constraintTop_toTopOf="@+id/imgPool" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layP3Waiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_black_transe"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtP3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="#12345678901"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layWaitLabelP3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/checkbox_ludo" />

                        <TextView
                            android:id="@+id/txtLabelWaitP3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" is waiting"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/imgPool"
                            app:layout_constraintStart_toStartOf="@+id/imgPool"
                            app:layout_constraintTop_toTopOf="@+id/imgPool" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layUser2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_player_height"
            android:layout_weight="1"
            android:layout_marginStart="-10dp"
            android:background="@drawable/bg_game_right"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:paddingVertical="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layP2Waiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_black_transe"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtP2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="#12345678901"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layWaitLabelP2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/checkbox_ludo" />

                        <TextView
                            android:id="@+id/txtLabelWaitP2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" is waiting"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/imgPool"
                            app:layout_constraintStart_toStartOf="@+id/imgPool"
                            app:layout_constraintTop_toTopOf="@+id/imgPool" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layP4Waiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_black_transe"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtP4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="#12345678901"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layWaitLabelP4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/checkbox_ludo" />

                        <TextView
                            android:id="@+id/txtLabelWaitP4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" is waiting"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/imgPool"
                            app:layout_constraintStart_toStartOf="@+id/imgPool"
                            app:layout_constraintTop_toTopOf="@+id/imgPool" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:gravity="end|center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtEntryLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Fee"
                    android:gravity="end"
                    android:textSize="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txtEntry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$50"
                    android:maxWidth="@dimen/_60sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/btn_dark_red_bg"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"/>

                <!--<LinearLayout
                    android:id="@+id/layCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_fanta_gems"/>

                    <TextView
                        android:id="@+id/txtCoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5% "
                        android:gravity="end"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/white"/>

                </LinearLayout>-->


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layOnlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:id="@+id/txtGreenDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_lineup_out"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/roboto_semi_bold"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/green_pure"
            android:textSize="@dimen/_7sdp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtOnlineCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/roboto_regular"
            android:text="0 Playing"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>