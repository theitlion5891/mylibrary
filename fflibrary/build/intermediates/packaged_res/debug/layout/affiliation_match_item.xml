<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/match_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/card_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_match_green"
            android:orientation="vertical">
            <!--                android:background="@drawable/border_match_green"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:background="@drawable/match_top_bar"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/match_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_alignStart="@+id/match_lineups_out"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="ECS T10 -  ECS T10 - Frankfut ECS T10 - Frankfut"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_weight="1"
                    android:id="@+id/layDate"
                    android:gravity="right"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/lineout"
                        android:text="Cricket"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_9sdp"
                        />

                </LinearLayout>


            </LinearLayout>

          <!--  <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_17sdp"
                android:id="@+id/layLeaderboard"
                android:background="@drawable/match_leaderboard_bg"
                android:layout_gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Leaderboard Match"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"/>

            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_8sdp">

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginVertical="@dimen/_8sdp"
                     android:layout_weight="1"
                     android:orientation="vertical">
                 </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team1_img"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/lightGrey"
                        android:src="@drawable/ic_team1_placeholder" />

                    <TextView
                        android:id="@+id/team1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="KXIP"
                        android:textAllCaps="true"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/match_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_match_row_time"
                    android:gravity="center"
                    android:text="17-March-22\n10:20 PM"
                    android:layout_weight="1.1"
                    android:minWidth="@dimen/_48sdp"
                    android:paddingHorizontal="@dimen/_9sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="RCB"
                        android:textAllCaps="true"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team2_img"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/lightGrey"
                        android:src="@drawable/ic_team2_placeholder" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/team1_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="King XI Punjab"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/_8sdp" />
                <TextView
                    android:id="@+id/team2_full_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="Royal Challenger Bangalore"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layDesc"
                android:visibility="visible"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/lightGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_pure"
                    android:text="Total affiliation: 5.00"
                    android:layout_weight="1"
                    android:id="@+id/txtMarchInvest"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textSize="@dimen/_8sdp"
                    android:paddingVertical="2dp"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>