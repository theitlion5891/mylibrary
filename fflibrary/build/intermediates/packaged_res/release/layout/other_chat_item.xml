<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/team_loading"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_other_bubble"
        android:layout_marginEnd="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="end"
            android:layout_gravity="end"
            android:textSize="@dimen/_9sdp"
            android:text="Mon, 10 oct 2024"/>

        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black"
            android:text="Mon, 10 oct 2024"/>

        <LinearLayout
            android:id="@+id/layUploadMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:background="@drawable/btn_primary">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_plus"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txtUploadBtnLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10sdp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Upload Media (Up to 20 MB)"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>