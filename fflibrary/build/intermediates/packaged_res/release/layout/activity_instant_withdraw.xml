<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        tools:context=".Activity.InstantWithdrawActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_gradiant"
        android:layout_below="@+id/toolbar"
        android:id="@+id/layHeader"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Winning Balance"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/total_winning_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹500.00"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layAmt"
        android:orientation="vertical"
        android:layout_below="@+id/layHeader"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw Amount"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/curv_black_border"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"/>
            <EditText
                android:id="@+id/add_amount_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:inputType="number"
                android:background="@color/transparent"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/layAmt"
        android:background="@color/white"
        android:paddingVertical="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount to be Withdraw"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_11ssp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdraw charge"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0.0"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/txtCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:textColor="@color/darkRed"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="#ccc"/>

        <LinearLayout
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Withdraw Amount"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0.0"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_cash_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Withdraw Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"/>

</RelativeLayout>
