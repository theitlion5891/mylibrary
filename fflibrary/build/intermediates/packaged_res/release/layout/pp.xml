<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
   >

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/green_border_fill_end_timer"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/conDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:singleLine="true"
                android:text="India | Australia"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/event_placeholder" />

                <TextView
                    android:id="@+id/team1ShortName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_11sdp"
                    android:text="India"

                    android:singleLine="true"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/layoutRateTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tradeboard_rate_bg_selected">

                    <TextView
                        android:id="@+id/opt1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:text="1.90"
                        android:textColor="@color/green_pure"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:src="@drawable/thunder_vs" />

            <LinearLayout
                android:id="@+id/layTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/event_placeholder" />

                <TextView
                    android:id="@+id/team2TradeBoard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="@dimen/_11sdp"
                    android:text="Australia"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/layoutRateTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tradeboard_rate_bg_unselected">

                    <TextView
                        android:id="@+id/txtRateTeam2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:text="3.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/grey_bottom_corners"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="1dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_2sdp"
                android:text="238 People are already joined"
                android:textColor="@color/gray_686868"
                android:textSize="@dimen/_9sdp" />
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_background"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@color/lighetest_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_extra_bold"
                android:text="Set Slots (Max 10000)"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtQty"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_round_border"
                android:fontFamily="@font/roboto_extra_bold"
                android:gravity="center"
                android:hint="Qty"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="5"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <!--<TextView
                android:id="@+id/txtQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />-->
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbarQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:max="10000"
            android:min="1"
            android:progressDrawable="@drawable/option_progress_bg"
            android:thumb="@drawable/opinion_slider_thum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBtn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/opinio_yes"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="10"
                android:textColor="@color/green_pure"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtBtn100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_match_green"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="100"
                android:textColor="@color/green_pure"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtBtn500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_match_green"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="500"
                android:textColor="@color/green_pure"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtBtn1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_match_green"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="1,000"
                android:textColor="@color/green_pure"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtBtn10000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_match_green"
                android:fontFamily="@font/roboto_semi_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="10,000"
                android:textColor="@color/green_pure"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/yellow_border_bg_optinion"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="You Invest"
                    android:textColor="@color/blackPrimary"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtInvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="₹10.00"
                    android:textColor="@color/blackPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/flagBorder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="New Winning"
                    android:textColor="@color/blackPrimary"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtNewWinning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="₹30.00"
                    android:textColor="@color/blackPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/join_contest_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_15sdp"
            android:background="@drawable/btn_green"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp"
        android:background="@drawable/timer_end_bg_tournament"
        app:layout_constraintEnd_toEndOf="@+id/ll_background"
        app:layout_constraintTop_toTopOf="@+id/ll_background"
        app:layout_constraintBottom_toTopOf="@id/ll_background"
        app:layout_constraintStart_toStartOf="@id/ll_background"


        >
        <TextView
            android:id="@+id/txtEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="@dimen/_2sdp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_9sdp"
            android:text="ENDS ON 06H : 41M" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
