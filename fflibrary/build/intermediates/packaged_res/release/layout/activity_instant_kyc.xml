<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.InstantKycActivity">

    <include layout="@layout/toolbar_back"
        android:id="@+id/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8EEE5"
        android:textColor="@color/waiting_bg"
        android:text="1/2  |  Steps remaining to complete KYC Process"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:id="@+id/txtKycStepLbl"/>

    <ImageView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/instant_kyc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:text="Verify your PAN &amp; Bank Details"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_5sdp"
      />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="#E4F6FE"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="#F1F6DA"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_compare_bijli"/>
                <TextView
                    android:id="@+id/txtPanVerification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/green_pure"
                    android:text=" INSTANT VERIFICATION"
                    android:textAllCaps="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/pan_kyc_placeholder"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_extra_bold"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="PAN Card"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        />

                    <TextView
                        android:id="@+id/txtPanNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimaryTransparent"
                        android:text="Mandatory for withdraw"
                        android:paddingHorizontal="@dimen/_10sdp"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgArrowPan"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_686868" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="#E4F6FE"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="#F1F6DA"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_compare_bijli"/>
                <TextView
                    android:id="@+id/txtBankVerification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/green_pure"
                    android:text=" INSTANT VERIFICATION"
                    android:textAllCaps="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/bank_kyc_placeholder"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_extra_bold"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:text="Bank Detail"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        />

                    <TextView
                        android:id="@+id/txtBankDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimaryTransparent"
                        android:text="Mandatory for withdraw"
                        android:paddingHorizontal="@dimen/_10sdp"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgArrowBank"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_686868" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>