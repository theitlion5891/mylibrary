<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:contentPadding="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/layMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_timer"/>
                <TextView
                    android:id="@+id/txtConEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ends on May 20th"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_trade"/>
                <TextView
                    android:id="@+id/txtTrades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 Vote"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtNewBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:visibility="gone"
                android:background="@drawable/red_bg_radius"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgConImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/event_placeholder"/>
            <TextView
                android:id="@+id/txtConTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_semi_bold"
                android:text="Chennai to qualify for playoffs Indian T20 League 2023"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:background="@drawable/light_blue_bg_curve"
            android:paddingVertical="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_trophy"/>
            <TextView
                android:id="@+id/txtConDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ends on May 20th"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="@dimen/_5sdp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingVertical="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$20.0"
                android:paddingVertical="@dimen/_6sdp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/gray_round_border"
                android:fontFamily="@font/roboto_semi_bold"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtOp1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$20.0"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/gray_round_border"
                android:paddingVertical="@dimen/_6sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtOp2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$20.0"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/gray_round_border"
                android:paddingVertical="@dimen/_6sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtOp3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$20.0"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/gray_round_border"
                android:paddingVertical="@dimen/_6sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtOp4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$20.0"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/gray_round_border"
                android:paddingVertical="@dimen/_6sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtOp5"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>