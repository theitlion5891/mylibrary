<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/ic_trade"/>
            <TextView
                android:id="@+id/txtTrades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 Vote"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_9sdp"
                android:layout_marginStart="@dimen/_5sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_regular"
                android:text="Your Answer is "
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
           />
            <TextView
                android:id="@+id/txtWinOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_semi_bold"
                android:text="India To win"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investment "
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/txtInvst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_9sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/layWinning"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/green_shadow_win_amt_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtWinAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Won 10 "
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/green_pure"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:src="@drawable/rupee_green_round"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>