<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    app:contentPadding="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardBackgroundColor="#E6F0F8"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:id="@+id/base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/imgClose"
                android:src="@drawable/ic_close_otp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="end"/>


            <TextView
                android:id="@+id/txtActionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CANCEL"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtActionSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your entered quantity will be cancelled."
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:textSize="@dimen/_12sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layPrice">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exit Trade Prize"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seekPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/option_progress_bg"
                        android:thumb="@drawable/opinion_slider_thum"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:max="9"
                        android:min="1"/>

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_extra_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtQtyAtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 quantity available at 1"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_10sdp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/edtQty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:hint="Quantity"
                android:inputType="number"
                android:maxLength="5"
                android:digits="0123456789"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/roboto_extra_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/gray_border"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtMaxQtyAvail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text=""
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/txtSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:textColor="@color/pink"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--
            <SeekBar
                android:id="@+id/seekPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/option_progress_bg"
                android:thumb="@drawable/opinion_slider_thum"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:max="9"
                android:min="1"
                />
            <EditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:hint="Price"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:background="@drawable/gray_bg_light_curve"/>-->

            <Button
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_24sdp"
                android:background="@drawable/ic_green_btn"
                android:id="@+id/btnSubmit"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>