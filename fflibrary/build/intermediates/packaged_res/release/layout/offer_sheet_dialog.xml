<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:background="@drawable/gradient_grey_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Offer Details"
            android:textStyle="bold"
            android:paddingStart="@dimen/_8sdp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_round"
            android:visibility="gone"
            android:id="@+id/imgClose"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:background="@color/blackSecondary"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team No."
            android:gravity="center"
            android:id="@+id/txtTeam"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Entry Fee"
            android:id="@+id/txtEntry"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bonus use(%)"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:id="@+id/txtBonus"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"/>
       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bonus use"
            android:gravity="center"
            android:id="@+id/txtBonusVal"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"/>-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.54dp"
        android:background="@color/light_gray_a9a9a9"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerOffer"/>

</LinearLayout>