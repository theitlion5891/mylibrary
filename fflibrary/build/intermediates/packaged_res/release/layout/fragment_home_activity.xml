<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fantafeat.Fragment.HomeActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/home_actionbar"
            layout="@layout/toolbar_home_fragment"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/tabs"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    android:layout_weight="1"
                    android:background="@color/pureWhite"
                    app:tabTextAppearance="@style/MyCustomTabWithIcon"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabIndicatorHeight="@dimen/_3sdp"
                    app:tabPaddingBottom="@dimen/_5sdp"
                    app:tabPaddingTop="@dimen/_5sdp"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_trade_x"
                    android:background="@color/white"
                    android:id="@+id/imgTrade"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="Cricket"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                <!--<TextView
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tab5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>-->

            </LinearLayout>

        </RelativeLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager">
        </androidx.viewpager2.widget.ViewPager2>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?actionBarSize"
        android:src="@drawable/placeholder_banner"
        android:visibility="gone"
        android:id="@+id/imgSanta"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/imgBg"/>

</RelativeLayout>