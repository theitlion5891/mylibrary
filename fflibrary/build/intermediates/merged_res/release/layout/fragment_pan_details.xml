<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PanDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/panMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_8sdp"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txtSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_8ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/pan_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/pan_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_primary">

                    <TextView
                        android:id="@+id/pan_upload_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="Upload PAN Card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/pan_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/white" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:text="Name*"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:id="@+id/pan_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:hint="As on PAN card"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:importantForAutofill="no"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                    android:maxLength="54"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="10 Digit PAN no."
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <EditText
                    android:id="@+id/pan_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    android:importantForAutofill="no"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:hint="PAN number*"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:maxLength="10"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="Date of Birth"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <TextView
                    android:id="@+id/pan_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:hint="e.g. DD/MM/YYYY*"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:text="Select State"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_8ssp" />

                <Spinner
                    android:id="@+id/pan_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curv_border"
                    android:textSize="@dimen/_10ssp" />

                <Button
                    android:id="@+id/pan_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"

                    android:background="@drawable/btn_primary"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>