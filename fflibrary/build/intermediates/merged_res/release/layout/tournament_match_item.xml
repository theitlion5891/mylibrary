<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_190sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="3dp"
    app:contentPadding="0dp"
    android:id="@+id/mainCard"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp"
            android:background="@drawable/tournament_gradiant_top_one"
            android:gravity="center"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/match_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team1_img"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/team_loading"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        />

                    <TextView
                        android:id="@+id/team1_sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/match_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:maxLines="1"
                        android:text="00m : 00s"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp"
                        />

                    <TextView
                        android:id="@+id/match_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/layLine"
                        android:visibility="gone"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@drawable/timer_bg_tournament"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/lineout"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            />

                        <TextView
                            android:id="@+id/match_lineups_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_toRightOf="@+id/lineout"
                            android:text="Lineups out"
                            android:textColor="@color/green_pure"
                            android:textSize="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team2_img"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        android:src="@drawable/team_loading"
                        />
                    <TextView
                        android:id="@+id/team2_sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layGrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:gravity="start"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEGA"
                    android:textSize="@dimen/_7ssp"
                    android:textColor="@color/popti"
                    android:gravity="center"
                    android:background="@drawable/offer_text_bg"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="1dp"/>

                <TextView
                    android:id="@+id/txtGrandPrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:paddingVertical="@dimen/_3sdp"
                    android:paddingHorizontal="@dimen/_8sdp"/>
            </LinearLayout>

        </LinearLayout>


       <!-- <de.hdodenhof.circleimageview.CircleImageView
