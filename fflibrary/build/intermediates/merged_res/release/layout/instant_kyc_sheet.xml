<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="@dimen/_10sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_80sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layPan"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/pan_kyc_placeholder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_extra_bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Verify Your PAN Number"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_3sdp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="#E4F6FE"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/white_round_shape"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtPanNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enter Pan Number"
                            android:inputType="text"
                            android:maxLength="15"
                            android:textSize="@dimen/_12sdp"
                            android:background="@drawable/transparent_view"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_8sdp"/>

                        <ImageView
                            android:id="@+id/imgScanPan"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/scan_kyc_dock"
                            android:layout_marginEnd="@dimen/_5sdp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_green_btn"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:text="Submit"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/btnPanSubmit"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layBank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/bank_kyc_placeholder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_extra_bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Verify Your Bank Details"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_3sdp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="#E4F6FE"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtBankNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Account Number"
                        android:inputType="number"
                        android:digits="0987654321"
                        android:maxLength="22"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/white_round_shape"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_8sdp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtBankIfsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter IFSC Code"
                        android:inputType="text"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/white_round_shape"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_8sdp"/>


                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_green_btn"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:text="Submit"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/btnBankSubmit"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>