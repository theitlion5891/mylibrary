<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="0.5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtBowlName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            style="@style/Tv_10_bold"
           />
        <TextView
            android:id="@+id/txtZero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/_3sdp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/Tv_10_normal"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtMaiden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/_3sdp"
            android:maxLines="1"
            android:gravity="center"
            style="@style/Tv_10_normal"/>

        <TextView
            android:id="@+id/txtRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/_3sdp"
            android:maxLines="1"
            android:gravity="center"
            style="@style/Tv_10_normal"/>

        <TextView
            android:id="@+id/txtWickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/_3sdp"
            android:maxLines="1"
            android:gravity="center"
            style="@style/Tv_10_normal"/>

        <TextView
            android:id="@+id/txtECO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_marginStart="@dimen/_3sdp"
            android:maxLines="1"
            android:gravity="center"
            style="@style/Tv_10_normal"/>
    </LinearLayout>

</LinearLayout>