<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OpinionDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blackPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/roboto_semi_bold"
                android:layout_toEndOf="@+id/back_img"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/ic_share"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/imgShare"
                app:tint="@color/white" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_timer"/>

                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ends on May 20th"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:background="@drawable/opinio_yes"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtMatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginStart="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/txtLblMatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Joined"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9sdp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:visibility="gone"
                android:background="@drawable/red_bg_radius"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgConImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/event_placeholder"/>
            <TextView
                android:id="@+id/txtConTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_semi_bold"
                android:text="Chennai to qualify for playoffs Indian T20 League 2023"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prize Pool"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:paddingTop="@dimen/_3sdp"
                    android:id="@+id/contest_price_pool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:ellipsize="marquee"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGiveOpinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rzp_green_button"
                android:text="Entry: "
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/_5sdp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/contest_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/dark_blue_progressbar"
                android:layout_height="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:progress="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_1sdp"
                android:paddingHorizontal="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contest_left_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contest_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="Spots left"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contest_total_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contest_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="Total Spots"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:background="@drawable/light_blue_bg_curve"
            android:paddingVertical="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/ic_light_blue_trophy"/>
            <TextView
                android:id="@+id/txtFirstPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="@dimen/_5sdp"/>

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_light_blue_pie"/>
            <TextView
                android:id="@+id/txtWinPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 %"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="@dimen/_5sdp"/>

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_trade"/>
            <TextView
                android:id="@+id/txtUpto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up to "
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ans"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/opinio_yes"
            android:textColor="@color/dark_blue"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/txtAns"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/tabLeaderboard">
            <TextView
                android:id="@+id/txtLeaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Leaderboard"
                android:textColor="@color/dark_blue"
                android:paddingVertical="@dimen/_8sdp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_12sdp"
                />
            <View
                android:id="@+id/viewLeaderboard"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/tabOverview">
            <TextView
                android:id="@+id/txtOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Overview"
                android:textColor="@color/gray_686868"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"
                android:paddingVertical="@dimen/_8sdp"/>
            <View
                android:id="@+id/viewOverview"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="gone"
                android:background="@color/dark_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/tabWinning">
            <TextView
                android:id="@+id/txtWinning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Winning"
                android:textColor="@color/gray_686868"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"
                android:paddingVertical="@dimen/_8sdp"/>
            <View
                android:id="@+id/viewWinning"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="gone"
                android:background="@color/dark_blue"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layLeaderboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#676493"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Team name"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Winning"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Rank"
                android:gravity="end"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/recyclerLeaderboard"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        android:id="@+id/layOverview">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/txtDescription"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source Agency"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/roboto_semi_bold"
            android:textSize="@dimen/_11sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/txtSouceAgency"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/roboto_semi_bold"
            android:textSize="@dimen/_11sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/txtStartDate"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/roboto_semi_bold"
            android:textSize="@dimen/_11sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/txtEndDate1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/layWinning">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Prize Pool"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_rank_pool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="200000"
            android:fontFamily="@font/roboto_semi_bold"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_20ssp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/recyclerWinning"/>

    </LinearLayout>

</LinearLayout>