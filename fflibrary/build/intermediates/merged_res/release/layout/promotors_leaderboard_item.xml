<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/leader_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/viewRank"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#39AD5E"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/_5sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_team1_placeholder"
                android:visibility="visible"
                android:id="@+id/imgUser"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTeamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:text=""
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_2sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:textSize="@dimen/_8sdp"
                    android:text="Portfolio"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:text=""
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/green_pure" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtWinAmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imgWinGadgets"
            android:src="@drawable/win_iphone"
            android:layout_weight="0.4"
            android:visibility="gone"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/txtRank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:text="Rank"
            android:visibility="gone"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_weight="0.3"
            android:visibility="visible"
            android:src="@drawable/ic_rank_one"
            android:id="@+id/imgRank"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#ccc"/>

</LinearLayout>