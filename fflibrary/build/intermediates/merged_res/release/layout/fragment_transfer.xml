<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TransferFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transferable Balance"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/total_transferable_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5,000"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:layout_below="@id/linear1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_7sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/white">
                <TextView
                    android:text="Deposit balance"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/textPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/deposit_balance"
                    android:text="₹500"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_7sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/white">
                <TextView
                    android:text="Winning balance"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/textPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/winning_balance"
                    android:text="₹500"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:layout_below="@id/linear1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_18sdp"
            android:background="@color/white">

            <TextView
                android:text="Enter transfer amount"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_8ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:longClickable="false"
                android:id="@+id/user_amount"
                android:layout_marginVertical="@dimen/_5sdp"
                android:inputType="number"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/curv_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Enter friend's phone number"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_8ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/friend_phone_number"
                android:layout_marginVertical="@dimen/_5sdp"
                android:inputType="number"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/curv_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/transfer_btn"
        android:layout_alignParentBottom="true"
        android:text="Transfer"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/top_round_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>