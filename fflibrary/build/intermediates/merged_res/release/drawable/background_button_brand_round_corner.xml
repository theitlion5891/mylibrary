<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius" />
            <solid android:color="@color/colorButtonBrandFillDisabled" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius" />
            <solid android:color="@color/ph_colorAccent" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius" />
            <solid android:color="@color/ph_colorAccent" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius" />
            <solid android:color="@color/ph_colorAccent" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" android:state_enabled="true">
            <corners android:radius="@dimen/default_corner_radius" />
            <solid android:color="@color/ph_colorAccent" />
        </shape>
    </item>

</selector>

